.page1
  width 100%
  height 100%
  background #000
  overflow hidden
  perspective 1500px
  transform-style preserve-3d
  .demo-poster
    width 300px
    height 500px
    margin 200px auto
    display block
    box-shadow 0px 0px 40px 20px green
    border 1px solid green
    animation rotatePage 2s infinite

@keyframes rotatePage
  0%
    transform rotate3d(0, 1, 0, 0deg)
  100%
    transform rotate3d(0, 1, 0, 360deg)