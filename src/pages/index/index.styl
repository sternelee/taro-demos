.box
  width 400px
  height 400px
  margin 100px auto 0
  background #000
  position relative
  perspective 1500px

.box0,
.box1,
.box2
  position absolute
  background #eee
.box0
  width 100%
  height 200px
  left 0
  top 0
  transition transform 1s, opacity .1s linear 1s
  transform-origin bottom center
  transform rotate3d(1, 0, 0, 0deg)

.box1,
.box2
  width 200px
  height 200px
  bottom 0
.box1
  left 0
  transition transform 1s linear 2s
.box2
  right 0
  transition transform 1s linear 1s, opacity .1s linear 2s
  transform-origin left center
  transform rotate3d(0, 1, 0, 0deg)

.box.on
  .box0
    opacity 0
    transform rotate3d(1, 0, 0, -180deg)
  .box2
    opacity 0
    transform rotate3d(0, 1, 0, -180deg)
  .box1
    transform translate3d(100px, -100px, 0px)
